{
  "name": "thunderbot",
  "version": "0.0.0-development",
  "description": "A simple and generic automated whatsapp client",
  "main": "build/index.js",
  "bin": "build/index.js",
  "scripts": {
    "test": "sucrase-node src/tests/test.ts",
    "start": "sucrase-node src/index.ts",
    "build": "tsc --build tsconfig.json",
    "pack": "pkg .",
    "semantic-release": "semantic-release"
  },
  "pkg": {
    "assets": [
      "settings/settings.json"
    ],
    "targets": [
      "node14-win-x64",
      "node14-linux-x64"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucas-engen/thunderbot"
  },
  "keywords": [
    "thunderbot",
    "whatsapp-bot",
    "whatsapp-web",
    "whatsapp"
  ],
  "author": "Lucas Vieira de Jesus",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/lucas-engen/thunderbot/issues"
  },
  "homepage": "https://github.com/lucas-engen/thunderbot#readme",
  "dependencies": {
    "cli-spinner": "^0.2.10",
    "log-timestamp": "^0.3.0",
    "pkg": "^5.8.1",
    "puppeteer": "^13.3.0",
    "puppeteer-core": "^3.3.0",
    "qrcode-terminal": "^0.12.0",
    "run": "^1.4.0",
    "sucrase": "^3.15.0",
    "typescript": "^4.0.3",
    "whatsapp-web.js": "^1.16.0"
  }
}
